{
  "name": "nexus-backend",
  "version": "1.0.0",
  "description": "Backend API for Nexus Developers",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "bun --hot src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate:dev": "bunx prisma migrate dev",
    "migrate:deploy": "bunx prisma migrate deploy",
    "prisma:gen": "bunx prisma generate",
    "db:seed": "bunx ts-node src/db/seed.ts",
    "lint": "eslint .",
    "openapi": "bun src/app.ts --dump-openapi > openapi.json"
  },
  "keywords": [
    "nexus",
    "dcit208",
    "backend",
    "api"
  ],
  "author": "Nexus Developers",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.872.0",
    "@aws-sdk/s3-presigned-post": "^3.872.0",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pino": "^9.9.0",
    "prisma": "^6.14.0",
    "prom-client": "^15.1.3",
    "redis": "^4.6.10",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
